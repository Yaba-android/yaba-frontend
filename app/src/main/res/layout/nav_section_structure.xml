                    android:id="@+id/genre_poetry_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Poetry   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_reference_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_politics_social_sciences_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Politics &amp; Social Sciences   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_poetry_flag"
                    android:layout_below="@+id/genre_reference_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/poetry_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Poetry   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_poetry_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/politics_social_sciences_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Politics &amp; Social Sciences   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/poetry_flag"
                    android:layout_below="@+id/genre_politics_social_sciences_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Poetry   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/poetry_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/social_sciences_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Politics &amp; Social Sciences   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/poetry_flag"
                    android:layout_below="@+id/politics_social_sciences_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <Button
                    android:id="@+id/button_sort_nav_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⇅  Sort"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextBlack"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:padding="15dp"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorNavFooterGrey">

                <Button
                        android:id="@+id/button_popularity_nav_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Popularity"
                        android:textColor="@android:color/darker_gray"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:padding="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@android:color/transparent"
                        tools:ignore="RtlSymmetry"/>

                <Button
                        android:id="@+id/button_title_nav_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title (A-Z)"
                        android:textColor="#1F1F1F"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"/>

                <Button
                        android:id="@+id/button_review_score_nav_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review Score"
                        android:textColor="@android:color/darker_gray"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:padding="15dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:background="@android:color/transparent"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

