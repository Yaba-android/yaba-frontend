                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_graphic_novels_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Graphic Novels   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_fiction_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_health_lifestyle_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Health &amp; Lifestyle   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_graphic_novels_flag"
