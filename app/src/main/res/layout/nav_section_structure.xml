                    android:id="@+id/genre_horror_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Horror   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_home_garden_flag"
                    android:layout_below="@+id/genre_graphic_novels_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_humour_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Humour   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_history_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_languages_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Languages   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_humour_flag"
                    android:layout_below="@+id/genre_history_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_mind_body_spirit_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Mind, Body &amp; Spirit   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_humour_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_music_screen_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Music &amp; Screen   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_mind_body_spirit_flag"
                    android:layout_below="@+id/genre_humour_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_reference_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Reference   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_mind_body_spirit_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_religion_spirituality_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Religion &amp; Spirituality   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
