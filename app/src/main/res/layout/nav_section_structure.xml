<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorNavGrey"
            tools:ignore="RtlSymmetry">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp">

            <TextView
                    android:id="@+id/author_title_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/select_genre"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="RtlHardcoded"
                    android:paddingTop="20dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp"/>

            <Button
                    android:id="@+id/button_close_nav_genre"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="⬅"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="30sp"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp">

            <TextView
                    android:id="@+id/genre_biography_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Biography   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_art_photography_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Art &amp; Photography   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_biography_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_business_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Business   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_biography_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_computing_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Computing   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_business_flag"
                    android:layout_below="@+id/genre_biography_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_children_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Children's   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_computing_flag"
                    android:layout_below="@+id/genre_biography_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_crime_thriller_mystery_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Crime, Thrillers &amp; Mystery   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_business_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_education_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Education   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_crime_thriller_mystery_flag"
                    android:layout_below="@+id/genre_business_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_fiction_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="   Fiction   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/genre_crime_thriller_mystery_flag"
                    android:clickable="true"
                    tools:ignore="RtlHardcoded"/>

            <TextView
                    android:id="@+id/genre_food_drink_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Food &amp; Drink   "
                    android:textColor="@color/colorPurple"
                    android:textSize="12sp"
                    android:background="@drawable/rounded_corner_genre_flag_white"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:layout_toStartOf="@id/genre_fiction_flag"
                    android:layout_below="@+id/genre_crime_thriller_mystery_flag"
